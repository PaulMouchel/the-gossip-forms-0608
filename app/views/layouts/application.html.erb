            <%= link_to "Messages", conversations_path, class: "nav-link" %>
          </li>
          <% end %>
        </ul>
        <ul class="navbar-nav my-2 my-lg-0">
          <% if !current_user%>
          <li class="nav-item">
            <%= link_to "Login", new_session_path, class: "btn btn-outline-primary mr-1"%>
          </li>
          
          <li class="nav-item">
            <%= link_to "Sign up", new_user_path, class: "btn btn-outline-primary" %>
          </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "#{current_user.full_name}", user_path(current_user.id), class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", session_path(session[:user_id]), class: "btn btn-danger", method: :delete, data: { confirm: 'Es-tu sÃ»r de vouloir vous logout?' }%> 
            </li>
          <% end %>
        </ul>
      </div>
    </nav>



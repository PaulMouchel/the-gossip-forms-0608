<html>
  <body>
    <% if @conversation.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer la conversation pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @conversation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='container'>
      <br>
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Message' %>
        <%= text_area_tag 'content', '', class: "form-control", placeholder:"Entre le le message !" %>
        <br>
        <%= label_tag 'Envoyer à :' %>
        <%= select_tag "user", options_from_collection_for_select(@users_in_list, "id", "full_name"), class:"dropdown"%>
        <br><br>

        <%= submit_tag "Envoyer", class: "btn btn-primary" %>

      <% end %>
    </div>


  </body>
</html>